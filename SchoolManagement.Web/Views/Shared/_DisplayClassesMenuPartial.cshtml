<environment include="Development">
    <script>
        function showClasses(value) {
            let s = value;

            if (s === "Aluno") {
                document.getElementById('hidden').style.display = "block";
            }
            else {
                document.getElementById('hidden').style.display = "none";
            }
            if (s === "Formador") {
                document.getElementById('hiddenTeacher').style.display = "block";
            }
            else {
                document.getElementById('hiddenTeacher').style.display = "none";
            }
        }
    </script>
</environment>
