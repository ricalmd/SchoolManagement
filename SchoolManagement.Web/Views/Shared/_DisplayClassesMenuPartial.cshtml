<environment include="Development">
    <script>
        function showClasses(value) {
            let s = value;

            if (s === "Aluno") {
                document.getElementById('hidden').style.visibility = "visible";
                document.getElementById('hidden').style.height = "70px";
            }
            else {
                document.getElementById('hidden').style.visibility = "hidden";
                document.getElementById('hidden').style.height = "1px";
            }
            if (s === "Formador") {
                document.getElementById('hiddenTeacher').style.visibility = "visible";
                document.getElementById('hiddenTeacher').style.height = "auto";
            }
            else {
                document.getElementById('hiddenTeacher').style.visibility = "hidden";
                document.getElementById('hiddenTeacher').style.height = "1px";
            }
        }
    </script>
</environment>
