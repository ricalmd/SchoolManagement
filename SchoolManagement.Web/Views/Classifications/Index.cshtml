@model IEnumerable<SchoolManagement.Web.Data.Entities.Class>

@{
    ViewData["Title"] = "Index";
}

<h2>Ações formativas</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Designação da turma
            </th>
            <th>
                Nome do curso
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Ver</a>
            </td>
        </tr>
}
    </tbody>
</table>
