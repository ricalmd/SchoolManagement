@model IEnumerable<SchoolManagement.Web.Data.Entities.Class>

@{
    ViewData["Title"] = "Index";
}

<h2>Turmas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeginSchedule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndSchedule)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginSchedule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndSchedule)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
