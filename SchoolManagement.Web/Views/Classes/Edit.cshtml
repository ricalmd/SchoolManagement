@model SchoolManagement.Web.Data.Entities.Class

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Turma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NameClass" class="control-label"></label>
                <input asp-for="NameClass" class="form-control" />
                <span asp-validation-for="NameClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeginSchedule" class="control-label"></label>
                <input asp-for="BeginSchedule" class="form-control" />
                <span asp-validation-for="BeginSchedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndSchedule" class="control-label"></label>
                <input asp-for="EndSchedule" class="form-control" />
                <span asp-validation-for="EndSchedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}