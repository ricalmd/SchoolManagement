@model SchoolManagement.Web.Models.ClassAndCourseViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Criar</h2>

<h4>Turma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameClass" class="control-label"></label>
                <input asp-for="NameClass" class="form-control" />
                <span asp-validation-for="NameClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeginSchedule" class="control-label"></label>
                <input asp-for="BeginSchedule" class="form-control" />
                <span asp-validation-for="BeginSchedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndSchedule" class="control-label"></label>
                <input asp-for="EndSchedule" class="form-control" />
                <span asp-validation-for="EndSchedule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <select asp-for="CourseId" asp-items="Model.Courses" class="form-control"></select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Voltar à lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}